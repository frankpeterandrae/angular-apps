{
	"name": "generators",
	"$schema": "../../node_modules/@angular-devkit/schematics/collection-schema.json",
	"sourceRoot": "libs/generators/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/generators",
				"main": "libs/generators/src/index.ts",
				"tsConfig": "libs/generators/tsconfig.lib.json",
				"assets": [
					"libs/generators/*.md",
					{
						"input": "libs/generators",
						"glob": "**/!(*.ts)",
						"output": "./src"
					},
					{
						"input": "libs/generators",
						"glob": "**/*.d.ts",
						"output": "./src"
					},
					{
						"input": "libs/generators",
						"glob": "generators.json",
						"output": "."
					},
					{
						"input": "libs/generators",
						"glob": "executors.json",
						"output": "."
					}
				]
			}
		},
		"lint": {
			"executor": "@nx/eslint:eslint",
			"options": {
				"lintFilePatterns": ["libs/generators/**/*.ts", "{projectRoot}/package.json"]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/libs/generators"],
			"options": {
				"jestConfig": "libs/generators/jest.config.js",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		}
	}
}
